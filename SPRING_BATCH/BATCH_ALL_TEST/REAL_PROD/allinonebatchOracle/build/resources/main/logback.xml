<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%5level [%thread] - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.example.allinonebatch.mapper.*">
        <level value="trace"/>
    </logger>

    <root level="info">
        <appender-ref ref="stdout"/>
    </root>

</configuration>